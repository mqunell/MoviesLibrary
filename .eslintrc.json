{
	"env": {
		"commonjs": true,
		"node": true
	},
	"extends": [
		"airbnb-base",
		"eslint:recommended",
		"plugin:node/recommended",
		"plugin:prettier/recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"plugins": ["prettier"],
	"rules": {
		"consistent-return": "off",
		"no-console": "off",
		"no-plusplus": [
			"warn",
			{
				"allowForLoopAfterthoughts": true
			}
		],
		"no-underscore-dangle": [
			"warn",
			{
				"allow": ["_id"]
			}
		],
		"no-unused-expressions": [
			"warn",
			{
				"allowTernary": true
			}
		],
		"no-unused-vars": "warn",
		"no-use-before-define": [
			"error",
			{
				"functions": false
			}
		],
		"prefer-template": "off",
		"prettier/prettier": ["warn"]
	}
}
